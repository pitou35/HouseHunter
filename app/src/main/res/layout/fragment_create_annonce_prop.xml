<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pitou.househunter.CreateAnnoncePropFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Titre de l'annonce"
        android:ems="10"
        android:id="@+id/TitreAnnonce"
        android:layout_below="@+id/titre"
        android:layout_toEndOf="@+id/titre"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TitreAnnonce" />

    <TextView
        android:text="Adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adresse"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/DescriAnnonce"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Adresse de l'annonce"
        android:ems="10"
        android:id="@+id/AdressAnnonce"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/adresse"
        android:layout_alignStart="@+id/DescriAnnonce" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Description de l'annonce"
        android:ems="10"
        android:id="@+id/DescriAnnonce"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/TitreAnnonce"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AdressAnnonce"
        android:layout_alignEnd="@+id/AdressAnnonce"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="25dp"
        android:id="@+id/Ajouter" />

</RelativeLayout>
