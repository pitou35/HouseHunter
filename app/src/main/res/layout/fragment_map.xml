<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pitou.househunter.CarteFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignBottom="@+id/buttonRecherche"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextRecherche"
        android:layout_toStartOf="@+id/buttonRecherche" />

    <Button
        android:text="@string/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConnection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonLoc" />

    <Button
        android:text="@string/rechercher_lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRecherche"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonLoc" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@null"
        android:indeterminate="false"
        android:max="2"
        android:splitTrack="false"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editTextRecherche"
        style="@style/Widget.AppCompat.SeekBar" />

</RelativeLayout>
